{
  "name": "brand-imaging",
  "version": "0.1.0",
  "description": "Automated brand image generation from templates using Puppeteer, Handlebars, and Sharp",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "brand-imaging": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "brand",
    "image-generation",
    "puppeteer",
    "templates",
    "automation",
    "social-media",
    "og-images"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "express": "^4.21.2",
    "generic-pool": "^3.9.0",
    "handlebars": "^4.7.8",
    "juice": "^11.1.1",
    "ora": "^8.1.1",
    "p-limit": "^6.2.0",
    "puppeteer": "^24.2.1",
    "sharp": "^0.33.5",
    "ws": "^8.18.0",
    "yaml": "^2.7.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/generic-pool": "^3.8.2",
    "@types/node": "^22.13.4",
    "@types/pngjs": "^6.0.5",
    "@types/ws": "^8.5.14",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^8.57.1",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.5.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
