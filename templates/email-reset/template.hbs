      .hero-heading { font-size: 24px !important; line-height: 1.2 !important; }
      .hero-subtext { font-size: 15px !important; }
      .cta-button { width: 100% !important; display: block !important; }
      .cta-button a { display: block !important; width: 100% !important; text-align: center !important; }
